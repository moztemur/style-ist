{
  "compilerOptions": {
    "target": "ESNext",                // fine for modern builds
    "module": "ESNext",                // tsup decides final output
    "declaration": true,               // needed for dts generation
    "emitDeclarationOnly": false,      // tsup controls emit
    "skipLibCheck": true,
    "moduleResolution": "Bundler",     // or "NodeNext" if you prefer
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    // enable strict typing
    "outDir": "dist"                   // tsup will also output here
  },
  "include": ["src"]
}